  }

  th {
    text-align: left;
    padding: 0.5rem;
    border-bottom: 1px solid #0f3460;
    color: #a0a0b8;
    font-weight: 600;
  }

  td {
    padding: 0.5rem;
    border-bottom: 1px solid rgba(15, 52, 96, 0.5);
  }

  td code {
    color: #e94560;
    font-size: 0.85rem;
  }

  .no-params {
