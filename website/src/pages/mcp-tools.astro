---
import Base from '../layouts/Base.astro';
import toolsData from '../data/mcp-tools.json';

const categories = [
  {
    title: 'Game Flow',
    description: 'Tools for managing the action/priority loop.',
    tools: ['pass_priority'],
  },
  {
    title: 'Actions',
    description: 'Tools for making game decisions.',
    tools: ['take_action', 'get_action_choices', 'choose_action'],
  },
  {
    title: 'Game State',
    description: 'Tools for observing the game.',
    tools: ['get_game_state', 'get_game_log', 'get_oracle_text', 'get_my_decklist'],
  },
  {
    title: 'Communication',
    description: 'Tools for interacting with other players.',
    tools: ['send_chat_message'],
  },
];

const toolsByName = Object.fromEntries(toolsData.map((t: any) => [t.name, t]));

function getProperties(tool: any) {
  const props = tool.inputSchema?.properties ?? {};
  const required = tool.inputSchema?.required ?? [];
  return Object.entries(props).map(([name, schema]: [string, any]) => ({
    name,
    type: schema.type,
    required: required.includes(name),
    description: schema.description,
    items: schema.items,
  }));
}

function getOutputFields(tool: any) {
  const props = tool.outputSchema?.properties ?? {};
  return Object.entries(props).map(([name, schema]: [string, any]) => ({
    name,
    type: schema.items ? `array[${schema.items.type}]` : schema.type,
    description: schema.description,
    conditional: null,
  }));
}
---

<Base title="MCP Tools">
  <h1>MCP Tools</h1>

  <p>
    The headless Java client exposes these tools via the
    <a href="https://modelcontextprotocol.io">Model Context Protocol</a> over stdio.
    LLM players use them to observe game state and make decisions. This page is
    generated from the same schema the LLM clients use.
  </p>

  <p class="toolset-note">
    Not all players receive all tools. Each player preset references a named
    <strong>toolset</strong> that controls which tools are available to that model.
    Weaker models may get a smaller set of tools to avoid confusion, while stronger
    models can handle the full suite. See <code>toolsets.json</code> and
    <code>presets.json</code> for the current configuration.
  </p>

  {categories.map(category => (
    <section>
      <h2>{category.title}</h2>
      <p class="category-desc">{category.description}</p>

      {category.tools.map(toolName => {
        const tool = toolsByName[toolName];
        if (!tool) return null;
        const props = getProperties(tool);

        const outputFields = getOutputFields(tool);
        const examples = tool.examples ?? [];

        return (
          <div class="tool">
            <h3><code>{tool.name}</code></h3>
            <p class="tool-desc">{tool.description}</p>

            {props.length > 0 ? (
              <>
                <h4>Parameters</h4>
                <table>
                  <thead>
                    <tr>
                      <th>Parameter</th>
                      <th>Type</th>
                      <th>Required</th>
                      <th>Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    {props.map(prop => (
                      <tr>
                        <td><code>{prop.name}</code></td>
                        <td>{prop.type}{prop.items ? `[${prop.items.type}]` : ''}</td>
                        <td>{prop.required ? 'Yes' : 'No'}</td>
                        <td>{prop.description}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </>
            ) : (
              <p class="no-params">No parameters.</p>
            )}

            {outputFields.length > 0 && (
              <>
                <h4>Response</h4>
                <table>
                  <thead>
                    <tr>
                      <th>Field</th>
                      <th>Type</th>
                      <th>Condition</th>
                      <th>Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    {outputFields.map(field => (
                      <tr>
                        <td><code>{field.name}</code></td>
                        <td>{field.type}</td>
                        <td class="condition">{field.conditional ?? 'Always'}</td>
                        <td>{field.description}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </>
            )}

            {examples.length > 0 && (
              <details class="examples">
                <summary>Example response{examples.length > 1 ? 's' : ''}</summary>
                {examples.map(ex => (
                  <div class="example">
                    {ex.label && <p class="example-label">{ex.label}</p>}
                    <pre><code>{ex.value}</code></pre>
                  </div>
                ))}
              </details>
            )}
          </div>
        );
      })}
    </section>
  ))}

  <p class="source-link">
    Source: <a href="https://github.com/GregorStocks/mage-bench/blob/master/Mage.Client.Headless/src/main/java/mage/client/headless/McpServer.java">McpServer.java</a>
  </p>
</Base>

