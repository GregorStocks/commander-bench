---
interface Props {
  title: string;
  wide?: boolean;
}

const { title, wide } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/leaderboard', label: 'Leaderboard' },
  { href: '/about', label: 'About' },
  { href: '/mcp-tools', label: 'MCP Tools' },
  { href: '/games', label: 'Games' },
  { href: 'https://www.youtube.com/playlist?list=PLZkLbT-AmvhB66wstXYqn4AmCYn4hmQ34', label: 'Watch' },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | mage-bench</title>
  </head>
  <body>
    <nav>
      <a class="site-title" href="/">mage-bench</a>
      <ul>
        {navLinks.map(link => (
          <li>
            <a href={link.href} class:list={[{ active: currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}>
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <main class:list={[{ wide }]}>
      <slot />
    </main>
    <footer>
      <p>
        <a href="https://github.com/GregorStocks/mage-bench">GitHub</a>
      </p>
    </footer>
  </body>
</html>

<style>
  :global(*, *::before, *::after) {
    box-sizing: border-box;
    margin: 0;
  }

  :global(body) {
    font-family: system-ui, -apple-system, sans-serif;
    color: #e0e0e0;
    background: #1a1a2e;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  nav {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem 2rem;
    padding: 1rem 2rem;
    background: #16213e;
    border-bottom: 1px solid #0f3460;
  }

  .site-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #e94560;
    text-decoration: none;
  }

  nav ul {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    gap: 0.5rem 1.5rem;
    padding: 0;
  }

  nav a {
    color: #a0a0b8;
    text-decoration: none;
    transition: color 0.2s;
  }

  nav a:hover,
  nav a.active {
    color: #e94560;
  }

  main {
    flex: 1;
    max-width: 52rem;
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
  }

  main.wide {
    max-width: none;
  }

  footer {
    text-align: center;
    padding: 2rem;
    color: #666;
    border-top: 1px solid #0f3460;
  }

  footer a {
    color: #a0a0b8;
    text-decoration: none;
  }

  footer a:hover {
    color: #e94560;
  }
</style>
